mixin videoPlayer(videoX ={})
 .videoPlayer#jsVideoPlayer
    video(src=`/${videoX.src}`)
    .videoPlayer__controls
        
        .videoPlayer__column
          span#jsVolumeBtn 
           i.fas.fa-volume-up
          span#jsTime
           span#currentTime 00:00:00 
           |/ 
           span#totalTime 00:00:00
          input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")   
          span#jsFullScreen 
             i.fas.fa-expand 
        .videoPlayer__column
          span#jsPlayButton 
             i.fas.fa-play 
      
        .videoPlayer__column
          input#playBar(type="range", min="0", max="100", step="1", value="0")